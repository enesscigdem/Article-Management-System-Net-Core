@model Article
<section class="blog-posts grid-system" style="margin-top:0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="~/images/articleimage/@Model.Image" alt="">
                                </div>

                                <div class="down-content">
                                    <a href="post-details.html"><h4 style="max-width: 100%;overflow: hidden;text-overflow: ellipsis;">@Model.Title</h4></a>
                                    <ul class="post-info">
                                        <li><a href="#">@Model.Author.FirstName @Model.Author.LastName</a></li>
                                        <li><a href="#">@Model.CreationDate</a></li>
                                        <li style="cursor:pointer;"><i class="fa fa-thumbs-up"> @Model.Likes</i></li>
                                        <li><i class="fa fa-eye"> @Model.Views</i></li>
                                        <li><i class="fa fa-comment"> @Model.Comments.Count()</i></li>
                                    </ul>
                                    <div style="overflow-wrap:break-word; word-wrap:break-word; max-width:100%">
                                        <p>@Model.Content </p>
                                    </div>
                                    <div class="post-options">

                                        <a asp-area="" asp-controller="Home" asp-action="LikeArticle" asp-route-articleId="@Model.ArticleId" class="btn btn-outline-success float-right" id="likeButton">
                                            <i style="color:green" class="fa fa-thumbs-up"></i>
                                        </a>


                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    @foreach (var category in Model.Categories)
                                                    {
                                                        <li><a href="#">@category.CategoryName,</a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item comments">
                                <div class="sidebar-heading">
                                    <h2>@Model.Comments.Count() comments</h2>
                                </div>
                                <div class="content">
                                    @foreach (var comment in Model.Comments)
                                    {
                                        <ul style="margin-top:10px">
                                            <li>
                                                <div class="author-thumb">
                                                    @if (comment.User.ProfilePicture != null)
                                                    {
                                                        <img src="data:image/jpg;base64,@comment.User.ProfilePicture" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/stand-blog/assets/images/user-1.jpg" alt="">
                                                    }
                                                </div>
                                                <div class="right-content">
                                                    @if (comment.User != null)
                                                    {
                                                        <h4>@comment.User.UserName<span>@comment.CreationDate</span></h4>
                                                        <p>@comment.Content</p>
                                                    }
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Your comment</h2>
                                </div>
                                <div class="content">
                                    <form asp-area="" asp-controller="Home" asp-action="AddComment" method="post">
                                        <input type="hidden" name="articleId" value="@Model.ArticleId" />
                                        <textarea name="content" rows="6" placeholder="Yorumunuzu yazınız.." required></textarea>
                                        <button style="cursor:pointer" type="submit" class="main-button">Mesaj Gönder</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
