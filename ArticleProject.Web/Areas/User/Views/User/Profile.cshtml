@model UserProfileDto
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Profil Ayarları /</span> Profilim</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Profil Bilgilerim</h5>
                <form asp-area="User" asp-controller="User" asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="data:image/jpg;base64,@Model.ProfilePicture" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">

                            <div class="button-wrapper">
                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input asp-for="ProfilePicture" type="file" class="account-file-input" accept="image/png, image/jpeg" id="upload" />
                                    <span asp-validation-for="ProfilePicture"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label asp-for="FirstName" class="form-label">İsim</label>
                                <input asp-for="FirstName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Soyisim</label>
                                <input asp-for="LastName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label">Email Adresi</label>
                                <input asp-for="Email" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Password" class="form-label">Mevcut Parola <strong>*</strong></label>
                                <input asp-for="Password" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="NewPassword" class="form-label">Yeni Parola (Opsiyonel)</label>
                                <input asp-for="NewPassword" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Profili Güncelle</button>
                            <a asp-area="User" asp-controller="User" asp-action="PassiveAccount" id="deleteAccountButton" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"> Hesabı Sil </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Hesabı Sil</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Hesabı silmek istediğinize emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <a asp-area="User" asp-controller="User" asp-action="PassiveAccount" class="btn btn-danger">Evet, Sil</a>
                </div>
            </div>
        </div>
    </div>

</div>
